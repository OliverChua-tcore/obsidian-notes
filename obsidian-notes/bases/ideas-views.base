filters:
  and:
    - file.folder.startsWith("ideas")
    - file.name != "_folder"
properties:
  file.name:
    displayName: File
  file.mtime:
    displayName: Modified
  note.title:
    displayName: Title
  note.aliases:
    displayName: Aliases
  note.tags:
    displayName: Tags
  note.created:
    displayName: Created
  note.edit-status:
    displayName: Edit status
  note.template-version:
    displayName: Template
  note.type:
    displayName: Type
views:
  - type: table
    name: IDEAS
    groupBy:
      property: file.folder
      direction: ASC
    order:
      - file.name
      - title
      - created
      - file.mtime
      - tags
      - aliases
      - type
      - template-version
      - edit-status
    sort:
      - property: title
        direction: ASC
      - property: file.name
        direction: ASC
    columnSize:
      file.name: 80
      note.title: 500
      note.created: 170
      file.mtime: 150
      note.tags: 500
      note.aliases: 500
      note.type: 100
      note.template-version: 100
      note.edit-status: 100
