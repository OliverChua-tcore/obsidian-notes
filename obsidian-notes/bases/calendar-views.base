filters:
  and:
    - file.folder.startsWith("calendar")
    - file.name != "_folder"
properties:
  note.created:
    displayName: Created
  file.name:
    displayName: File
  file.mtime:
    displayName: Modified
  note.title:
    displayName: Title
  note.aliases:
    displayName: Aliases
  note.tags:
    displayName: Tags
views:
  - type: table
    name: CALENDAR
    groupBy:
      property: file.folder
      direction: ASC
    order:
      - file.name
      - title
      - created
      - file.mtime
      - tags
      - aliases
      - type
      - template-version
    sort:
      - property: title
        direction: ASC
      - property: file.name
        direction: DESC
    columnSize:
      file.name: 80
      note.title: 500
      note.created: 150
      file.mtime: 150
      note.tags: 500
      note.aliases: 500
      note.type: 100
      note.template-version: 100
