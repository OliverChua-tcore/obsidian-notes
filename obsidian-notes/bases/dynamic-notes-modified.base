filters:
  and:
    - file.mtime >= this["short-date"]
    - file.mtime < this["short-date"] + duration("1 day")
    - type != "transaction"
    - "!created.isEmpty()"
properties:
  file.name:
    displayName: File
  note.created:
    displayName: Created
  note.title:
    displayName: Title
  file.mtime:
    displayName: Modified
views:
  - type: table
    name: Notes last touched today
    order:
      - file.name
      - title
      - created
      - file.mtime
    sort:
      - property: file.mtime
        direction: ASC
    columnSize:
      file.name: 80
      note.title: 500
      note.created: 200
      file.mtime: 180
