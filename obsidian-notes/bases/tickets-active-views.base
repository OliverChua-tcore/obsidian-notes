filters:
  and:
    - type == "ticket"
properties:
  file.name:
    displayName: Ticket
  note.ticket-title:
    displayName: Title
  note.ticket-ilms:
    displayName: ILMS
  note.ticket-parent:
    displayName: Parent
  note.ticket-status:
    displayName: Status
views:
  - type: table
    name: Active tickets
    filters:
      and:
        - note["ticket-status"] == "in-progress"
    groupBy:
      property: project
      direction: ASC
    order:
      - file.name
      - ticket-parent
      - ticket-status
      - ticket-title
    sort:
      - property: file.mtime
        direction: DESC
    columnSize:
      file.name: 120
      note.ticket-parent: 140
      note.ticket-status: 120
      note.ticket-title: 500
  - type: table
    name: Inactive tickets
    filters:
      and:
        - note["ticket-status"] != "in-progress"
    groupBy:
      property: project
      direction: ASC
    order:
      - file.name
      - ticket-parent
      - ticket-status
      - ticket-title
    sort:
      - property: file.mtime
        direction: DESC
    columnSize:
      file.name: 120
      note.ticket-parent: 140
      note.ticket-status: 120
      note.ticket-title: 500
